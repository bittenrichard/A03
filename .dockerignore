# /a03/.dockerignore

# Ignora dependências locais, que serão reinstaladas dentro do contêiner
node_modules
/frontend/node_modules
/backend/node_modules

# Ignora pastas de build
dist
build

# Ignora arquivos de ambiente local (o de produção será injetado via env_file)
.env
.env.*
!.env.production

# Ignora logs e arquivos do git
npm-debug.log*
yarn-debug.log*
yarn-error.log*
.git
.gitignore

# Ignora a pasta de configuração do Nginx (só é relevante para o build do frontend)
/nginx

# Ignora arquivos do Docker que não fazem parte do contexto do build em si
frontend.Dockerfile
backend.Dockerfile
docker-compose.yml