{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "resolveJsonModule": true
  },
  "include": [
    "server.ts",
    "src/shared/services/baserowServerClient.ts",
    "src/shared/services/webhookService.ts",
    "src/shared/types.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}